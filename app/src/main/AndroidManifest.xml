<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.kayangan.absencehrd">

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="26" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_SETTINGS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_square"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.IntroActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".Activity.WelcomeActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.HomeActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".Activity.RegistrationActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".Activity.LoginActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".Activity.MenuActivity"
            android:label="Home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.MapsActivity"
            android:label="Location" />
        <activity
            android:name=".Activity.MainActivity"
            android:label="Attendance Machine" />
        <activity
            android:name=".Activity.ProfileActivity"
            android:label="Profile Menu"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activity.StockActivity"
            android:label="Stock"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activity.SalesOrderActivity"
            android:label="Sales Order"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activity.TaskManagerActivity"
            android:label="Task Manager"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activity.AddOrderActivity"
            android:label="Add New Order"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activity.CreateTaskActivity"
            android:label="Create New Task"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activity.EditTaskActivity"
            android:label="Edit Task"
            android:theme="@style/AppTheme" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <service
            android:name=".Helper.GPSTracker"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".Activity.CommentActivity"
            android:label="Comments"
            android:theme="@style/AppTheme.NoActionBar" />

        <receiver android:name=".Helper.AlarmReceiver"
            android:enabled="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

    </application>

</manifest>